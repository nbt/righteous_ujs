<% Rails.logger.debug("=== in #{__FILE__}") %>

<%# remove any error messages %>
$("#error_explanation").remove()

<%# remove any extant input form %>
$(".form").remove();

<%# expose any hidden rows %>
$(".row").show();

<%# ask the server to generate an editing form for this item %>
<% content = escape_javascript(render :partial => 'form', :locals => {:toy => @toy}) %>

<%# insert the editing form at the bottom of the list %>
$('.body-div').append("<%= content -%>")
